{
  "name": "raffle_system",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rimraf apps/**/dist apps/**/.next packages/**/dist",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter prisma prisma generate",
    "db:migrate": "pnpm --filter prisma prisma migrate dev --name init",
    "db:studio": "pnpm --filter prisma prisma studio",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d"
  },
  "devDependencies": {
    "@types/node": "^22.15.14",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
