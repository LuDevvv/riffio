generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Tenant {
    id        String   @id @default(cuid())
    name      String
    slug      String   @unique
    users     User[]
    raffles   Raffle[]
    createdAt DateTime @default(now())
}

model User {
    id       String @id @default(cuid())
    email    String @unique
    password String
    role     Role
    tenantId String
    tenant   Tenant @relation(fields: [tenantId], references: [id])
}

model Raffle {
    id        String   @id @default(cuid())
    title     String
    tenantId  String
    tenant    Tenant   @relation(fields: [tenantId], references: [id])
    createdAt DateTime @default(now())
}

enum Role {
    SUPERADMIN
    OWNER
    EDITOR
    VERIFIER
    VIEWER
}
